<template id='user'>
    <div>
        <span v-if="!userData.edit">
            {{userData.name}} - {{userData.time}} 
    <a @click="showLaps = !showLaps">
        show Laps
    </a>
<table v-if="showLaps" border="1">
    <tr>
        <th>Lap #</th>
        <th>This Lap</th> 
        <th>Running Total</th>
    </tr>
    <tbody id="lap">
        <tr v-for-laps="lap in laps">
            <td>{{lap.no}}</td>
            <td>{{lap.current}}</td>
            <td>{{lap.runningTotal}}</td>
        </tr>
    </tbody>
</table>
        </span>
        <span v-else>
            <input type="text" placeholder="name" v-model="userData.name">
            <input pattern="([1]?[0-9]|2[0-3]):[0-5][0-9]" type="text" v-model="userData.time">
            <button @click="updateData(0)"> update</button>
            <button @click="cancelUpdate">Cancel</button>
        </span>
        <div v-if="!userData.edit">
            <input type="button" name='btnStart' :value="onStart ? 'Pause' : 'Start'" @click="onstart ?pauseTimer(0) : startTimer(0)">
            <button v-if="!onStart" @click="editData">EDIT</button>
            <button v-if="!onStart" @click="removeUser(index)">Remove</button>
        </div>
    </div>    
</template>
